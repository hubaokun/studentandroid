<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical" >
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/tv_should_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="应付金额"/>
        <TextView 
            android:id="@+id/tv_pay_much"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="0元"
            android:textColor="#fe7614"/>
        
    </LinearLayout>
    
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="选择支付方式"
        android:textSize="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp"
        android:textColor="#aaaaaa"/>
    
    
    <LinearLayout 
        android:id="@+id/ll_weixin_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_weixin"
            />
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="微信支付"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black_deep"
            android:textSize="17dp"/>
        <ImageView 
            android:id="@+id/iv_weixin_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_gray_selected"
            />
    </LinearLayout>
    
     <View
        style="@style/common_line"
        android:layout_marginLeft="20dp"
        android:background="#c7c7c7" />
    
    <LinearLayout 
        android:id="@+id/ll_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_alipay"
            />
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="支付宝"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black_deep"
            android:textSize="17dp"/>
        <ImageView 
            android:id="@+id/iv_alipay_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_selected"
            />
        
       
    </LinearLayout>
               <TextView
                android:id="@+id/tv_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/recharge_shape"
                android:gravity="center"
                android:paddingTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:paddingBottom="10dp"
                android:text="立即支付"
                android:textSize="17dp"
                android:textColor="#ffffff"
                />
    

</LinearLayout>
