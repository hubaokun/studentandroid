<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="46dp"
        android:background="@drawable/shape_dialog_white_back"
        android:orientation="vertical"
        android:gravity="center_horizontal" >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="15dp"
              android:layout_marginTop="15dp"
              android:text="是否需要教练车？"
              android:textColor="#666666" />

          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:id="@+id/select_my_car"
              android:gravity="center_vertical"
              android:layout_marginLeft="15dp"
              >
              <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/coupon_normal"
                android:id="@+id/img_select_my_car"
              />
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="不需要"
                    android:textSize="15dp"
                     android:textColor="#666666"
                    android:layout_marginLeft="20dp"/>
              
          </LinearLayout>
         <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:id="@+id/ll_select_coach_car"
              android:paddingTop="10dp"
              android:layout_marginLeft="15dp"
              android:gravity="center_vertical"
              >
                <ImageView 
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/coupon_normal"
                android:id="@+id/img_select_coach_car"
                />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需要"
                    android:textSize="15dp"
                    android:textColor="#666666"
                    android:layout_marginLeft="20dp"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/red_line"
                    android:textSize="12dp"
                    android:text="使用费:"/>
                <TextView 
                    android:id="@+id/tv_money_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_line"
                    android:textSize="12dp"
                    android:text="60元"/>
                <TextView 
                    android:id="@+id/tv_unit_price"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/text_gray"
                    android:text="(20元x3小时)"/>
          </LinearLayout>
        
          <TextView
            android:id="@+id/tv_select_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/select_car_bg_shape"
            android:paddingBottom="13dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="13dp"
            android:text="确定"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp" />
    </LinearLayout>
    
    

</LinearLayout>
