<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="23dp"
    android:paddingRight="23dp" >

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_marginTop="31dp"
        android:src="@drawable/login_head_img" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="17dp"
                android:paddingTop="17dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/userinfo_name_img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" >

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="我是达到"
                        android:textColor="@color/text"
                        android:textSize="16dp" />

                    <RatingBar
                        android:id="@+id/rb_star"
                        style="@style/userinfo_ratingbar_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="0.5" />
                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/common_line"
                android:background="#c7c7c7" />

            <LinearLayout
                android:id="@+id/li_identity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="identity_info"
                android:orientation="horizontal"
                android:paddingBottom="17dp"
                android:paddingTop="17dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/userinfo_identity_img" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" >
                    
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_identity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="基本信息"
                        android:textColor="@color/text"
                        android:textSize="16dp" />
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（预约必填）"
                        android:textSize="14sp"
                        android:textColor="@color/text_red"/>
					</LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="联系电话  真实姓名"
                        android:textColor="@color/userinfo_hint_text"
                        android:textSize="13dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/userinfo_next_img" />
            </LinearLayout>

            <View
                style="@style/common_line"
                android:background="#c7c7c7" />

            <LinearLayout
                android:id="@+id/li_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="car_info"
                android:orientation="horizontal"
                android:paddingBottom="17dp"
                android:paddingTop="17dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/userinfo_car_info_img" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="学驾信息"
                        android:textColor="@color/text"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="学员证号  制证时间"
                        android:textColor="@color/userinfo_hint_text"
                        android:textSize="13dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/userinfo_next_img" />
            </LinearLayout>

            <View
                style="@style/common_line"
                android:background="#c7c7c7" />

            <LinearLayout
                android:id="@+id/li_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="personal_info"
                android:orientation="horizontal"
                android:paddingBottom="17dp"
                android:paddingTop="17dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/userinfo_personal_img" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="个人信息"
                        android:textColor="@color/text"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="性别  出生年月"
                        android:textColor="@color/userinfo_hint_text"
                        android:textSize="13dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/userinfo_next_img" />
            </LinearLayout>

            <View
                style="@style/common_line"
                android:background="#c7c7c7" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>