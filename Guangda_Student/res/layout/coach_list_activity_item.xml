<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="12dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/im_user" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_coach"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="@color/login_et_text"
                    android:textSize="18dp" />
                <LinearLayout 
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:layout_weight="1.5">
                      <TextView
                         android:layout_marginLeft="4dp"
                         android:id="@+id/tv_order"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="订单数："
                         android:textColor="#737880"
                         android:textSize="12dp" />
                       <TextView
                           android:id="@+id/tv_sumnum"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:singleLine="true"
                           android:text="0"
                           android:textColor="#50cb8c"
                           android:textSize="12dp" />
                </LinearLayout>
                
               
                <RatingBar
                    android:id="@+id/rb_star"
                    style="@style/coach_ratingbar_star"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.1" />
            </LinearLayout>
            
            <TextView
                android:id="@+id/tv_school" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:singleLine="true"
                android:textColor="#737880"
                android:textSize="12dp"
                android:visibility="gone"/>
             <TextView
                android:id="@+id/tv_freeicon" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="免费体验课"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@drawable/free_course_shape"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:textColor="#737880"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>