<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/im_user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/tv_coach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#3c3c3c"
                    android:textSize="14dp"/>
                 <TextView  
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_rad_round"
                android:layout_gravity="center"
                android:id="@+id/tv_freeicon"
                 android:layout_marginLeft="5dp" 
                 android:paddingLeft="2dp"
                android:paddingRight="2dp"/>
                 
                 <ImageView                     
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:src="@drawable/ic_starcoach"
                     android:layout_marginLeft="6dp"
                     android:id="@+id/img_starcoach" />

            </LinearLayout>
            
            <TextView
                android:id="@+id/tv_school" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:singleLine="true"
                android:textColor="#737880"
                android:textSize="12dp"
                android:visibility="gone"/>
            
            <LinearLayout                 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                 android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp">
                
                   <RatingBar
                    android:id="@+id/rb_star"
                    style="@style/coach_ratingbar_star"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.1" />
                   
                   <TextView                 
                       android:layout_width="wrap_content"
                	 android:layout_height="wrap_content"
                	 android:id="@+id/tv_order"
                	 android:textColor="#999999"
                	android:textSize="10dp"
                	android:text="预约次数:"
                	 android:layout_marginLeft="7dp"
                	 android:gravity="center_vertical"
                	 android:layout_gravity="center_vertical" />
                    <TextView                 
                       android:layout_width="wrap_content"
                	 android:layout_height="wrap_content"
                	 android:id="@+id/tv_sumnum"
                	 android:textColor="#999999"
                	android:textSize="10dp"
                	android:text="888"
                	 android:gravity="center_vertical"
                	 android:layout_gravity="center_vertical" />
                
                
            </LinearLayout>
            
            <LinearLayout                 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
               android:layout_marginTop="3dp">
                    
           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="11dp"
                 android:text="练车地址："/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="11dp"/>
            </LinearLayout>
            

        </LinearLayout>
    </LinearLayout>
                <View android:background="#d1d1d1"
         android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"/>
    </LinearLayout>

</LinearLayout>