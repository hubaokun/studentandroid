<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/regist_back_img" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_order_title_back"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_title_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="1px"
                android:layout_marginTop="1px"
                android:layout_weight="1"
                android:background="@drawable/selector_order_title_left_back"
                android:gravity="center"
                android:text="未完成"
                android:textColor="@color/selector_order_title_text" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#3c3c3c" />

            <TextView
                android:id="@+id/tv_title_center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1px"
                android:layout_marginTop="1px"
                android:layout_weight="1"
                android:background="@drawable/selector_order_title_center_back"
                android:gravity="center"
                android:text="待评价"
                android:textColor="@color/selector_order_title_text" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#3c3c3c" />

            <TextView
                android:id="@+id/tv_title_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1px"
                android:layout_marginTop="1px"
                android:layout_weight="1"
                android:background="@drawable/selector_order_title_center_back"
                android:gravity="center"
                android:text="已结束"
                android:textColor="@color/selector_order_title_text" />
             <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#3c3c3c" />
              <TextView
                android:id="@+id/tv_complaint"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:layout_marginTop="1px"
                android:layout_weight="1"
                android:background="@drawable/selector_order_title_right_back"
                android:gravity="center"
                android:text="待处理"
                android:textColor="@color/selector_order_title_text" />
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/common_line" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_tab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:visibility="visible" >
    </android.support.v4.view.ViewPager>

</LinearLayout>