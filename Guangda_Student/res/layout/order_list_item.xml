<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#c7c7c7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="2dp"
                android:src="@drawable/order_list_item_head_img" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_head"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_head"
                android:gravity="center_vertical"
                android:textSize="12dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="12dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#c7c7c7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="学车时间"
                android:textColor="#737780"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_order_list_continue_bg"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="继续预约"
                android:textColor="#f7645c"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#56cd9b" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="学车地址"
            android:textColor="#737780"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计："
                android:textColor="#737780" />

            <TextView
                android:id="@+id/tv_all_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="13dp"
        android:background="#c7c7c7" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        
        
        <TextView
            android:id="@+id/tv_confirm_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="上车时请提醒教练刷学员卡"
            android:textColor="@color/text_gray"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>        

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_alignParentRight="true"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp" 
            >
<!--             <TextView
                android:id="@+id/tv_complaint"
                android:layout_width="72dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_order_list_complaint"
                android:gravity="center"
                android:text="投诉"
                android:visibility="gone" /> -->

<!--             <TextView
                android:id="@+id/tv_complaint_more"
                android:layout_width="72dp"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/shape_order_list_complaint"
                android:gravity="center"
                android:text="追加投诉"
                android:visibility="gone" /> -->

            <TextView
                android:id="@+id/tv_cancel_complaint"
                android:layout_width="72dp"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/shape_order_list_cancel_complaint"
                android:gravity="center"
                android:text="取消投诉"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_get_on"
                android:layout_width="72dp"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/shape_order_list_cancel_complaint"
                android:gravity="center"
                android:text="确认上车"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_get_off"
                android:layout_width="72dp"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/shape_order_list_down_car"
                android:gravity="center"
                android:text="确认下车"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_cancel_order"
                android:layout_width="72dp"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/shape_order_list_cancel_order"
                android:gravity="center"
                android:text="取消订单"
                android:textColor="#f7645c"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="72dp"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/shape_order_list_comment_order"
                android:gravity="center"
                android:text="评论"
                android:textColor="#50cb8c"
                android:visibility="gone" />
        </LinearLayout>
        
         <LinearLayout
             android:id="@+id/ll_coach_sure"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_alignParentRight="true"
             android:visibility="gone"
             android:background="@drawable/selector_book_drive" >
                 <Button
                      android:layout_marginLeft="5dp"
                      android:layout_weight="1"
                      android:id="@+id/btn_c_oach_result"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="已提交取消订单申请，等待教练确认中。"
                      android:textColor="@color/white"
                      android:background="@drawable/selector_book_drive"/>
         </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#c7c7c7" />

</LinearLayout>